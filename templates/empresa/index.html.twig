{% extends 'base.html.twig' %}
{% block body %}
{% include('navbar.html.twig') %}
<div class="container">
    <h1>Empresa</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>RUC</th>
                <th>RAZON SOCIAL</th>
                <th>DIRECCION</th>
                <th>ACCION</th>
            </tr>
        </thead>
        <tbody>
        {% for empresa in empresas %}
            <tr>
                <td>{{ empresa.id }}</td>
                <td>{{ empresa.ruc }}</td>
                <td>{{ empresa.razonSocial }}</td>
                <td>{{ empresa.direccion }}</td>
                <td>
                    <a href="{{ path('empresa_show', {'id': empresa.id}) }}" class="btn btn-sm btn-info">VER</a>
                    <a href="{{ path('empresa_edit', {'id': empresa.id}) }}" class="btn btn-sm btn-primary">EDITAR</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('empresa_new') }}" class="btn btn-success">NUEVO</a>
</div>
{% endblock %}
