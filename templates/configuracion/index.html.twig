{% extends 'base.html.twig' %}

{% block title %}Configuracion index{% endblock %}

{% block body %}
{% include('navbar.html.twig') %}
<div class="container">
    <h1>Configuracion</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>ESTABLECIMIENTO</th>
                <th>PUNTO EMISION</th>
                <th>SEC. FACTURA</th>
                <th>ACCION</th>
            </tr>
        </thead>
        <tbody>
        {% for configuracion in configuracions %}
            <tr>
                <td>{{ configuracion.id }}</td>
                <td>{{ configuracion.establecimiento }}</td>
                <td>{{ configuracion.puntoEmision }}</td>
                <td>{{ configuracion.secFactura }}</td>
                <td>
                    <a href="{{ path('configuracion_show', {'id': configuracion.id}) }}" class="btn btn-sm btn-info">VER</a>
                    <a href="{{ path('configuracion_edit', {'id': configuracion.id}) }}" class="btn btn-sm btn-primary">EDITAR</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('configuracion_new') }}" class="btn btn-sm btn-success">NUEVO</a>
</div>
{% endblock %}
