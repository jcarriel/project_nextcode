<div class="container">
<a href="{{ path('factura_index') }}" class="btn btn-sm  float-right">REGRESAR A LA LISTA</a><br><br>
	<div class="card">
		<div class="card bg-info text-white">
			<h4>Nueva Factura</h4>
		</div>
		<div class="panel-body">
			{{ form_start(form,{'attr': {'novalidate':'novalidate','role' :'form'}}) }}
				<br>
				<div class="form-group row col-md-12">
				    <label for="nombre_cliente" class="col-md-1.5 control-label">ESTABLECIMIENTO</label>
				    <div class="col-md-3">
					   {{ form_widget(form.establecimiento, {'attr': {'class':'form-control','readonly':'readonly'}})}} 
						<span class="text-danger">{{form_errors(form.establecimiento)}}</span>
                    </div>
				    <label for="tel1" class="col-md-1 control-label">PUNTO EMISION</label>
					<div class="col-md-2">
						{{ form_widget(form.punto_emision ,{'attr': {'class':'form-control','readonly':'readonly'}}) }} 
						<span class="text-danger">{{form_errors(form.punto_emision)}}</span>
					</div>
					<label for="mail" class="col-md-1 control-label">SEC. FACTURA</label>
					<div class="col-md-3">
						{{ form_widget(form.sec_factura,{'attr': {'class':'form-control','readonly':'readonly'}}) }} 
                        <span class="text-danger">{{form_errors(form.sec_factura)}}</span>
					</div>
				</div>
				<div class="form-group row col-md-12">
				    <label for="empresa" class="col-md-1 control-label">EMPRESA</label>
                    <div class="col-md-3">
                        {{ form_widget(form.empresa,{'attr': {'class':'form-control','placeholder' :'EMPRESA'}}) }} 
                        <span class="text-danger">{{form_errors(form.empresa)}}</span>
                    </div>
                    <label for="tel2" class="col-md-1 control-label">CLIENTE</label>
                        <div class="col-md-2">
                        {{ form_widget(form.clientes,{'attr': {'class':'form-control','placeholder' :'CLIENTES'}}) }} 
                        <span class="text-danger">{{form_errors(form.clientes)}}</span>
                    </div>
                    <label for="tel2" class="col-md-1 control-label">FECHA</label>
                        <div class="col-md-3">
                        {{ form_widget(form.fecha,{'attr': {'class':'form-control'}}) }} 
                        <span class="text-danger">{{form_errors(form.fecha)}}</span>
                    </div>
				</div>
				
				<div class="col-md-12">
					<div class="float-right">
						<button type="button" class="btn btn-success" onclick="location.href='{{path('productos_new')}}'">
						Nuevo producto
						</button>
						<button type="button" class="btn btn-info" onclick="location.href='{{path('clientes_new')}}'">
						Nuevo cliente
						</button>
						<button type="button" class="btn btn-warning" data-toggle="modal" data-target="#myModal">
						 <span class="glyphicon glyphicon-search"></span> Agregar productos
						</button>
					</div>	
				</div><br><br><br><br><br>
				<div class="container col-md-8 text-center">
					<table id="mitabla" class="table table-striped table-bordered table-condensed table-sm">
						<thead class="thead-dark">
							<tr class="active">
								<th>ID</th>
								<th>DESCRIPCION</th>
								<th>PRECIO</th>
								<th>CANTIDAD</th>
								<th>TOTAL</th>
								<th width="50">ELIMINAR</th>
							</tr>
						</thead>
						<tbody >

						</tbody>
					</table>
					</div><br><br>

                <div class="form-group row col-md-12 float-right">
                <label class="col-md-2 control-label">IMPUESTOS</label>
                    <div class="col-md-3 float-right">
                        {{ form_widget(form.impuestos,{'attr': {'class':'form-control','placeholder' :'IMPUESTOS'}}) }} 
                        <span class="text-danger">{{form_errors(form.impuestos)}}</span>
                    </div>
                    <label class="col-md-2 control-label">TOTAL</label>
                    <div class="col-md-3">
                        {{ form_widget(form.total,{'attr': {'class':'form-control','placeholder' :'TOTAL'}}) }} 
                        <span class="text-danger">{{form_errors(form.total)}}</span>
                    </div>
                </div><br><br>
			<div class="container col-md-12 float-right" >
			<button class="col-md-2 btn btn-success float-right">{{ button_label|default('GUARDAR') }}</button><br><br>
            {{ form_end(form) }}<br>
			</div>
        </div>
    </div>
</div>

<script>
function load() {
    $('#factura_establecimiento').val("{{ configuracion.establecimiento }}");
	$('#factura_punto_emision').val("{{ configuracion.punto_emision }}");
	$('#factura_sec_factura').val("{{ configuracion.sec_factura }}");
}
window.onload = load;
</script>