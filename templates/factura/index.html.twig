{% extends 'base.html.twig' %}

{% block body %}
{% include('navbar.html.twig') %}
<div class="container">
    <h1>Factura</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>ESTABLECIMIENTO</th>
                <th>PUNTO EMISION</th>
                <th>SEC. FACTURA</th>
                <th>FECHA</th>
                <th>IMPUESTOS</th>
                <th>TOTAL</th>
                <th>ACCION</th>
            </tr>
        </thead>
        <tbody>
        {% for factura in facturas %}
            <tr>
                <td>{{ factura.id }}</td>
                <td>{{ factura.establecimiento }}</td>
                <td>{{ factura.puntoEmision }}</td>
                <td>{{ factura.secFactura }}</td>
                <td>{{ factura.fecha ? factura.fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ factura.impuestos }}</td>
                <td>{{ factura.total }}</td>
                <td>
                    <a href="{{ path('factura_show', {'id': factura.id}) }}" class="btn btn-sm btn-info">VER</a>
                    <a href="{{ path('factura_edit', {'id': factura.id}) }}" class="btn btn-sm btn-primary">EDITAR</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('factura_new') }}" class="btn btn-success">NUEVO</a>
</div>
{% endblock %}
