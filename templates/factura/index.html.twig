{% extends 'base.html.twig' %}

{% block title %}Factura index{% endblock %}

{% block body %}
{% include('navbar.html.twig') %}
    <h1>Factura</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Establecimiento</th>
                <th>Punto_emision</th>
                <th>Sec_factura</th>
                <th>Fecha</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for factura in facturas %}
            <tr>
                <td>{{ factura.id }}</td>
                <td>{{ factura.establecimiento }}</td>
                <td>{{ factura.puntoEmision }}</td>
                <td>{{ factura.secFactura }}</td>
                <td>{{ factura.fecha ? factura.fecha|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('factura_show', {'id': factura.id}) }}">show</a>
                    <a href="{{ path('factura_edit', {'id': factura.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('factura_new') }}">Create new</a>
{% endblock %}
